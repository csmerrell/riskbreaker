{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true
    }
}
